datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SalesReport {
  createdAt  DateTime  @default(now())
  date       DateTime?
  employee   Employee? @relation(fields: [employeeId], references: [id])
  employeeId String?
  file       Json?
  id         String    @id @default(cuid())
  updatedAt  DateTime  @updatedAt
}

model Employee {
  createdAt    DateTime      @default(now())
  email        String?
  id           String        @id @default(cuid())
  name         String?
  role         String?
  salesReports SalesReport[]
  updatedAt    DateTime      @updatedAt
}

model Notification {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  message   String?
  sendDate  DateTime?
  updatedAt DateTime  @updatedAt
}
